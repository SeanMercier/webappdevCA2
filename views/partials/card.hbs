<div class="ui card" id="{{name}}">
  <div class="image">
    <img src="{{image}}" />
  </div>
  <div class="content" id="cardbackgroundarea">
    <a class="header" id="cardheader">{{fullname}}</a>
    <div class="meta">
      <span class="date" id="date">Joined in {{joined}}</span>
    </div>
    <div class="description" id="description">
      {{name}}
      is
      {{job}}
      in
      {{city}}
    </div>
  </div>
  <div class="extra content" id="friendsiconabout">
    <a>
      <i class="user icon"></i>
      {{mates}}
      Friends
    </a>
  </div>
</div>